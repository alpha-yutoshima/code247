{
  "name": "code247",
  "displayName": "code247",
  "description": "phone's editor",
  "repository": {
    "type": "git",
    "url": "https://github.com/alpha-bbb/POC.git"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "browser": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.runCommand",
        "title": "Run Program"
      },
      {
        "command": "extension.debugCommand",
        "title": "Debug Program"
      },
      {
        "command": "extension.runTestCommand",
        "title": "Run Tests"
      },
      {
        "command": "code247.start",
        "title": "start",
        "category": "code247"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "extension.runCommand",
          "when": "editorTextFocus",
          "group": "navigation"
        },
        {
          "command": "extension.debugCommand",
          "when": "editorTextFocus",
          "group": "navigation"
        },
        {
          "command": "extension.runTestCommand",
          "when": "editorTextFocus",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "code247",
      "properties": {
        "code247.mode": {
          "type": [
            "string"
          ],
          "default": "menu",
          "description": "code247 mode"
        },
        "code247.joystickDoubleTapInterval": {
          "type": [
            "number"
          ],
          "default": 1000,
          "description": "code247 Joystick Double Tap Interval"
        },
        "code247.radialMenuPrimaryColor": {
          "type": [
            "string"
          ],
          "default": "#73D144",
          "description": "code247 Radial Menu Primary Color"
        },
        "code247.radialMenuSecondaryColor": {
          "type": [
            "string"
          ],
          "default": "#FFD348",
          "description": "code247 Radial Menu Secondary Color"
        },
        "code247.radialMenuBackgroundColor": {
          "type": [
            "string"
          ],
          "default": "#FFFFFF",
          "description": "code247 Radial Menu Background Color"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile:extension": "tsc -p ./tsconfig.extension.json",
    "compile:webview": "tsc -p ./tsconfig.webview.json",
    "compile": "npm run compile:extension && npm run compile:webview",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "open-in-browser": "vscode-test-web --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/test-web": "^0.0.62",
    "eslint": "^9.9.1",
    "nipplejs": "^0.10.2",
    "prettier": "3.3.3",
    "typescript": "^5.5.4"
  }
}
